{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Nuxt 4 Dev",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/nuxi",
      "args": [
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "http://localhost:3000/_nuxt/stores",
          "path": "${workspaceFolder}/app/stores"
        },
        {
          "url": "http://localhost:3000/_nuxt/pages",
          "path": "${workspaceFolder}/app/pages"
        },
        {
          "url": "http://localhost:3000/_nuxt/middleware",
          "path": "${workspaceFolder}/app/middleware"
        },
        {
          "url": "http://localhost:3000/_nuxt/components",
          "path": "${workspaceFolder}/app/components"
        }
      ]
    }
  ]
}
