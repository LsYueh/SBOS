{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Nuxt 4 Dev",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/.bin/nuxi",
        "args": ["dev"],
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["--inspect-brk"],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "smartStep": true
    }
  ]
}
